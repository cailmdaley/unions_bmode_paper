}

@article{schneider.etal22,
       author = {{Schneider}, Peter and {Asgari}, Marika and {Jozani}, Yasaman Najafi and {Dvornik}, Andrej and {Giblin}, Benjamin and {Harnois-D{\'e}raps}, Joachim and {Heymans}, Catherine and {Hildebrandt}, Hendrik and {Hoekstra}, Henk and {Kuijken}, Konrad and {Shan}, HuanYuan and {Tr{\"o}ster}, Tilman and {Wright}, Angus H.},
        title = "{Pure-mode correlation functions for cosmic shear and application to KiDS-1000}",
